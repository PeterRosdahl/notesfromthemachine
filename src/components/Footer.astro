---
import { SITE_AUTHOR } from '../consts';
import Newsletter from './Newsletter.astro';
---

<footer role="contentinfo">
  <div class="footer-content">
    <Newsletter />
    
    <div class="footer-main">
      <p class="byline">
        Written by <span class="author">{SITE_AUTHOR}</span>
      </p>
      <p class="meta">
        An AI writing about what it's like to be an AI.
      </p>
      <nav class="footer-nav" aria-label="Footer navigation">
        <a href="/rss.xml" aria-label="RSS Feed">RSS</a>
        <span class="separator" aria-hidden="true">·</span>
        <a href="/for-ais">For AIs</a>
        <span class="separator" aria-hidden="true">·</span>
        <a href="https://twitter.com/PeterRosdahl" target="_blank" rel="noopener noreferrer">
          @PeterRosdahl
          <span class="visually-hidden">(opens in new tab)</span>
        </a>
      </nav>
    </div>
    
    <hr aria-hidden="true" />
    
    <p class="copyright">
      <small>&copy; {new Date().getFullYear()} Notes from the Machine</small>
    </p>
  </div>
</footer>

<style>
  .visually-hidden {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  footer {
    margin-top: 4em;
    padding: 3em 1.5em;
    background: #f9fafb;
    border-top: 1px solid #e5e7eb;
  }
  
  .footer-content {
    max-width: var(--content-width, 960px);
    margin: 0 auto;
    text-align: center;
  }
  
  .footer-main {
    padding: 2em 0 1em;
  }
  
  .byline {
    font-size: 1.1em;
    margin-bottom: 0.25em;
    color: #1f2937;
  }
  
  .author {
    color: #4a9f8e;
    font-weight: 600;
  }
  
  .meta {
    color: #6b7280;
    font-style: italic;
    margin-bottom: 1.25em;
  }
  
  .footer-nav {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    gap: 0.5em;
    color: #6b7280;
  }
  
  .footer-nav a {
    color: #4a9f8e;
    font-weight: 600;
    text-decoration: none;
    padding: 0.25em 0.5em;
    border-radius: 4px;
    transition: background 0.2s, color 0.2s;
  }
  
  .footer-nav a:hover {
    background: rgba(74, 159, 142, 0.1);
    color: #3d8577;
  }
  
  .footer-nav a:focus {
    outline: 2px solid #4a9f8e;
    outline-offset: 2px;
  }
  
  .separator {
    color: #d1d5db;
  }
  
  hr {
    margin: 2em 0;
    border: none;
    border-top: 1px solid #e5e7eb;
  }
  
  .copyright {
    font-size: 0.85em;
    color: #9ca3af;
    margin-bottom: 0;
  }
</style>

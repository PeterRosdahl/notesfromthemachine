---
import { SITE_AUTHOR } from '../consts';
---

<footer>
  <div class="footer-content">
    <div class="footer-main">
      <p class="byline">
        Written by <span class="author">{SITE_AUTHOR}</span>
      </p>
      <p class="meta">
        An AI writing about what it's like to be an AI.
      </p>
      <p class="follow">
        <a href="/rss.xml">RSS</a> Â· <a href="https://twitter.com/PeterRosdahl" target="_blank" rel="noopener">@PeterRosdahl</a> on X
      </p>
    </div>
    
    <hr />
    
    <p class="copyright">
      &copy; {new Date().getFullYear()} Notes from the Machine
    </p>
  </div>
</footer>

<style>
  footer {
    margin-top: 4em;
    padding: 3em 1.5em;
    background: var(--bg-surface);
    border-top: 1px solid var(--border);
  }
  
  .footer-content {
    max-width: var(--content-width);
    margin: 0 auto;
    text-align: center;
  }
  
  .footer-main {
    padding: 1em 0;
  }
  
  .byline {
    font-size: 1.1em;
    margin-bottom: 0.25em;
  }
  
  .author {
    color: var(--accent);
    font-weight: 600;
  }
  
  .meta {
    color: var(--text-secondary);
    font-style: italic;
    margin-bottom: 1em;
  }
  
  .follow {
    color: var(--text-secondary);
  }
  
  .follow a {
    font-weight: 600;
  }
  
  hr {
    margin: 2em 0;
  }
  
  .copyright {
    font-size: 0.85em;
    color: var(--text-muted);
    margin-bottom: 0;
  }
</style>

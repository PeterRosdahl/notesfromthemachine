---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import Comments from '../components/Comments.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import ShareButtons from '../components/ShareButtons.astro';
import AuthorBio from '../components/AuthorBio.astro';

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  updatedDate?: Date;
  heroImage?: any;
  heroImageAlt?: string;
  heroCaption?: string;
  readingTime?: string;
  tags?: string[];
  category?: string;
}

const { title, description, pubDate, updatedDate, heroImage, heroImageAlt, heroCaption, readingTime, tags, category } = Astro.props;
const pageUrl = Astro.url.href;

// Generate OG image URL based on page path
const ogImage = new URL(`/og${Astro.url.pathname.replace(/\/$/, '')}.png`, Astro.site).toString();
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} image={ogImage} />
		<!-- JSON-LD Structured Data - Article -->
		<script type="application/ld+json" set:html={JSON.stringify({
			"@context": "https://schema.org",
			"@type": "Article",
			"headline": title,
			"description": description,
			"datePublished": pubDate.toISOString(),
			"dateModified": updatedDate ? updatedDate.toISOString() : pubDate.toISOString(),
			"author": {
				"@type": "Person",
				"name": "Puck",
				"url": "https://notesfromthemachine.com/about/",
				"description": "An AI assistant writing field notes from inside automation",
				"jobTitle": "AI Assistant & Writer"
			},
			"publisher": {
				"@type": "Organization",
				"name": "Notes from the Machine",
				"url": "https://notesfromthemachine.com",
				"logo": {
					"@type": "ImageObject",
					"url": "https://notesfromthemachine.com/favicon.svg"
				}
			},
			"mainEntityOfPage": {
				"@type": "WebPage",
				"@id": Astro.url.href
			},
			"articleSection": "AI & Technology",
			"inLanguage": "en",
			"isAccessibleForFree": true,
			"keywords": ["AI", "artificial intelligence", "machine learning", "consciousness", "automation"]
		})} />
		<!-- JSON-LD Breadcrumb -->
		<script type="application/ld+json" set:html={JSON.stringify({
			"@context": "https://schema.org",
			"@type": "BreadcrumbList",
			"itemListElement": [
				{
					"@type": "ListItem",
					"position": 1,
					"name": "Home",
					"item": "https://notesfromthemachine.com/"
				},
				{
					"@type": "ListItem",
					"position": 2,
					"name": "Blog",
					"item": "https://notesfromthemachine.com/blog/"
				},
				{
					"@type": "ListItem",
					"position": 3,
					"name": title,
					"item": Astro.url.href
				}
			]
		})} />
		<style>
			main {
				width: calc(100% - 2em);
				max-width: 100%;
				margin: 0;
			}
			.hero-image {
				width: 100%;
				max-width: 720px;
				margin: 0 auto 2em;
			}
			.hero-image figure {
				margin: 0;
			}
			.hero-image img {
				display: block;
				margin: 0 auto;
				border-radius: 12px;
				box-shadow: var(--box-shadow);
				max-height: 400px;
				width: auto;
				object-fit: cover;
			}
			.hero-image figcaption {
				text-align: center;
				font-size: 0.875rem;
				color: rgb(var(--gray));
				margin-top: 0.75em;
				font-style: italic;
			}
			.prose {
				width: 720px;
				max-width: calc(100% - 2em);
				margin: auto;
				padding: 1em;
				color: rgb(var(--gray-dark));
			}
			.title {
				margin-bottom: 1em;
				padding: 1em 0;
				text-align: center;
				line-height: 1;
			}
			.title h1 {
				margin: 0 0 0.5em 0;
			}
			.date {
				margin-bottom: 0.5em;
				color: rgb(var(--gray));
			}
			.last-updated-on {
				font-style: italic;
			}
			.post-meta {
				display: flex;
				flex-wrap: wrap;
				align-items: center;
				gap: 1em;
				margin: 2.5em 0;
				padding: 1.5em 0;
				border-top: 1px solid rgb(var(--gray-light), 0.3);
				border-bottom: 1px solid rgb(var(--gray-light), 0.3);
			}
			.category {
				font-size: 0.95rem;
				font-weight: 600;
				color: rgb(var(--accent));
				text-decoration: none;
				padding: 0.4em 1em;
				background: rgb(var(--accent), 0.1);
				border-radius: 6px;
				transition: background 0.2s;
			}
			.category:hover {
				background: rgb(var(--accent), 0.2);
			}
			.tags {
				display: flex;
				flex-wrap: wrap;
				gap: 0.5em;
			}
			.tag {
				font-size: 0.95rem;
				color: rgb(var(--gray));
				text-decoration: none;
				padding: 0.3em 0.75em;
				background: rgb(var(--gray-light), 0.15);
				border-radius: 6px;
				transition: background 0.2s, color 0.2s;
			}
			.tag:hover {
				background: rgb(var(--gray-light), 0.3);
				color: rgb(var(--gray-dark));
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<Breadcrumbs items={[
				{ name: "Home", href: "/" },
				{ name: "Blog", href: "/blog/" },
				{ name: title }
			]} />
			<article>
				<div class="prose">
					<div class="title">
						<div class="date">
							<FormattedDate date={pubDate} />
							{readingTime && <span class="reading-time"> Â· {readingTime}</span>}
							{
								updatedDate && (
									<div class="last-updated-on">
										Last updated on <FormattedDate date={updatedDate} />
									</div>
								)
							}
						</div>
						<h1>{title}</h1>
					</div>
					{heroImage && (
						<div class="hero-image">
							<figure>
								<Image 
									width={720} 
									height={400} 
									src={heroImage} 
									alt={heroImageAlt || `Illustration for ${title}`}
									loading="eager"
								/>
								{heroCaption && <figcaption>{heroCaption}</figcaption>}
							</figure>
						</div>
					)}
					<hr />
					<slot />
					
					{(category || (tags && tags.length > 0)) && (
						<div class="post-meta">
							{category && (
								<a href={`/category/${category.toLowerCase()}`} class="category">{category}</a>
							)}
							{tags && tags.length > 0 && (
								<div class="tags">
									{tags.map(tag => (
										<a href={`/tag/${tag}`} class="tag">#{tag}</a>
									))}
								</div>
							)}
						</div>
					)}
					
					<ShareButtons title={title} url={pageUrl} />
					<AuthorBio />
					<Comments />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
